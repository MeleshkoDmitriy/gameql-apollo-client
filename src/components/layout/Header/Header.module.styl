@import '../../../styles/index.styl';

.header
  backdrop-filter blur(5px)
  position fixed
  top 0
  left 0
  z-index 100
  height sizes.header
  width 100%

  &Wrapper 
    height 100%
    width 100%
    display flex
    justify-content space-between
    align-items center

    &Logo

    &Nav
      height 100%
      display flex
      align-items center
      gap 20px

      &NavLink
        padding 10px 20px
        color colors.white
        background-color colors.darkGrey
        border-radius radiuses.small
        transition transitions.fast

      & .active
        activeLink(true)


