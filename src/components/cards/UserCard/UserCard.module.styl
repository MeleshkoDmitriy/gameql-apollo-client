@import '../../../styles/index.styl';

.card 
  padding 20px
  border-radius radiuses.medium
  border 2px solid colors.lightGrey
  display flex
  flex-direction column
  align-items center
  justify-content center
  gap 10px
  background-color colors.darkGrey
  transition transitions.fast;

  &:hover
    transform translateY(-5px)
    border-color colors.white;

    .cardAvatar
      border-color colors.white;
  
  &Avatar
    width 100px
    aspect-ratio 1 / 1 
    border-radius 50%
    overflow hidden
    border 2px solid colors.lightGrey
    object-fit cover
    transition transitions.fast;

  &Name,
  &Reviews
    color colors.white;

  &Name
    font-size 18px
    text-align center
    display flex
    gap 10px
    flex-wrap wrap
    align-items center
    justify-content center

  &Reviews
    margin 0